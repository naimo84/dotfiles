[user]
	name = {{ .name }}
	email = {{ .email }}

[push]
	default = upstream
	autoSetupRemote = true

[pull]
	rebase = true

[init]
	defaultBranch = main

[credential]
    helper = store --file ~/.my-git-credentials

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true